template(name="social")


    .container
        .row
            h1.center.white-text.press-start-font Social

        .row
            // TODO: Split into template
            h4.white-text
                | Per's presence on the web
            .col.s6.m3
                    .card-panel.social-card.fade-in.teal
                        h1.center.icon-linkedin-squared
            .col.s6.m3
                .card-panel.social-card.fade-in.lime
                    h1.center.icon-youtube
            .col.s6.m3
                .card-panel.social-card.fade-in.pink
                    h1.center.icon-twitter
            .col.s6.m3
                .card-panel.social-card.fade-in.cyan
                    h1.center.icon-soundcloud
        br
        br

        .row
            // TODO: Split into template
            h4.white-text
                | Recommendations

            canvas#pie-chart.pie-chart

            p.flow-text.pink-text.rec
                b 40%
                span Driven
            p.flow-text.cyan-text.rec
                b 33%
                span Hard-working
            p.flow-text.lime-text.rec
                b 27%
                span Creative

        .row
            .col.s12.m12
                .card.blue.darken-1
                    .card-content.white-text
                        span.card-title.press-start-font Hannah @TicTail
                        p
                            i.mdi-editor-format-quote
                            span
                                i Per is one of the most driven, hard-working and sharp person I have worked with
                            span.mdi-editor-format-quote
                    .card-action
                        a(href='#') Go to recommendation

            // TODO: Scrollspy-reveal?
