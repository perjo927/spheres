template(name="spheres")
    with content
        .type-text.white-text.press-start-font.home-title > #{home.title}
            span.blink.white-text |

        .container
            .row
                .col.s12.m4
                    .shake
                        a(href="#")
                            .sphere.small-sphere.anti-gravity-left.press-start-font(class="green")
                                .arc.white-text Skills
                .col.s12.m4
                    | &nbsp;
                .col.s12.m4
                    .shake
                        a(href="#")
                            .sphere.small-sphere.anti-gravity-right(class="red").press-start-font
                                .arc.white-text CV
            .row
                .col.s12.m4
                    | &nbsp;
                .col.s12.m4
                    .sphere(class="yellow").press-start-font
                        .arc.white-text Per
                .col.s12.m4
                    | &nbsp;
            .row
                .col.s12.m4
                    .shake
                        .sphere.small-sphere.gravity-left(class="white").press-start-font
                            .arc.white-text Social
                .col.s12.m4
                    | &nbsp;
                .col.s12.m4
                    .shake
                        .sphere.small-sphere.gravity-right(class="blue").press-start-font
                            .arc.white-text Portfolio

